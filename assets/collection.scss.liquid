/* ==========================================================================
   Colors
   ========================================================================== */
$white      : #fff;
$black      : #000;
$red        : #F52559;
$grey       : #898989;
$darkblue1  : #01060f;
$darkblue2  : #0f131c;
$midblue1   : #2b3952;
$midblue2   : #202c42;
$linkblue   : #23569c;
$border-grey: #e1e1e1;
@mixin animate($time){
	-webkit-transition: all $time cubic-bezier(1, 0, 0, 1);
	-moz-transition: all $time cubic-bezier(1, 0, 0, 1);
	-ms-transition: all $time cubic-bezier(1, 0, 0, 1);
	-o-transition: all $time cubic-bezier(1, 0, 0, 1);
	transition: all $time cubic-bezier(1, 0, 0, 1);
}

@mixin resetList{
	padding: 0;
	margin: 0;
	list-style-type: none;
}
/* ==========================================================================
   Most theme settings should be stored in Sassy CSS variables here, for reuse.
   ========================================================================== */
/*!theme settings */
$background-color:        {{ settings.background_color }};
$text-color:              {{ settings.text_color }};
$link-color:              {{ settings.link_color }};
$base-font-family:        'Oswald', sans-serif;
$base-font-size:          {{ settings.base_font_size }};
$heading-font-family:     'Libre Baskerville', serif;
$heading-font-weight:     700;
$light-weight   : 	300;
$normal-weight  : 	400;

.h1-style, .h2-style, .h3-style{
	font-family: $heading-font-family;
	font-weight: $normal-weight;
	font-style: italic;
	text-rendering: optimizeLegibility; /* to enable ligatures and kerning */
	letter-spacing: -1px;
	margin: 0;
}

.h4-style, .h5-style, .h6-style {
	font-family: $base-font-family;
	font-weight: $heading-font-weight;
	text-rendering: optimizeLegibility; /* to enable ligatures and kerning */
	font-style: normal;
	margin: 0;
}

h1, .h1{
	@extend .h1-style;
	font-size: 3.5rem;
}

h2, .h2{
	@extend .h2-style;
	font-size: 3rem;
}

h3, .h3{
	@extend .h3-style;
	font-size: 2rem;
}

h4, .h4{
	@extend .h4-style;
	font-size: 1.5rem;
}

h5, .h5{
	@extend .h5-style;
	font-size: 1.4rem;
}

h6, .h6{
	@extend .h6-style;
	font-size: 1.3rem;
}

.up{
	text-transform: uppercase;
}

.grid-wrapper{
	@include animate(0.3s);
}

.grid {
	@include resetList;
	height: auto;
	background-color: $white;

	li{
		float: left;
		width: 33.333%;
		list-style-type: none;

		*{
			width: 100%;
		}
	}
}

